@model IEnumerable<Employee>

<a asp-action="CreateEmployee" asp-controller="Employee"><button>Add Employee</button></a>

<h2>Employees:</h2>
@foreach (var item in Model)
{
    <br />
    <div style="border: 2px solid black">
        <h5>@item.FullName</h5>
        <ul>
            <li>
                Title: @item.Title
            </li>
            <li>
                Hours: @item.Hours
            </li>
            <li>
                ID: @item.Employee_Id
            </li>
        </ul>
        <a asp-action="EditEmployee" asp-controller="Employee" asp-route-id="@item.Employee_Id"><button>Edit</button></a><br />
        <a asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@item.Employee_Id"><button>Delete</button></a><br />
    </div>
}
