@model Employee

<h2>Add Employee</h2>
<br />
<form method="post">
    <label asp-for="FullName" class="control-label"></label>
    <input placeholder="Full Name" asp-for="FullName" class="form-control" />
    <span asp-validation-for="FullName" class="text-danger"></span><br /><br />

    <label asp-for="Title" class="control-label"></label>
    <input placeholder="Title" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span><br /><br />

    <label asp-for="Hours" class="control-label"></label>
    <input value="0" asp-for="Hours" class="form-control" />
    <span asp-validation-for="Hours" class="text-danger"></span><br /><br />

    <input type="submit" />
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 