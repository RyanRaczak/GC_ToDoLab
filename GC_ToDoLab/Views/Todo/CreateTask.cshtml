@model ToDo

<h2>Create Task</h2>
<br />
<div>
    <form asp-action="CreateTask" method="post">

        <label asp-for="Task_Name" class="control-label">Task Name: </label>
        <input placeholder="Task Name" asp-for="Task_Name" class="form-control" />
        <span asp-validation-for="Task_Name" class="text-danger"></span><br /><br />

        <label asp-for="Task_Description" class="control-label">Description: </label>
        <input placeholder="Description" asp-for="Task_Description" class="form-control" />
        <span asp-validation-for="Task_Description" class="text-danger"></span><br /><br />

        <label asp-for="Hours_Needed" class="control-label">Work Hours: </label>
        <input placeholder="Hours needed" asp-for="Hours_Needed" class="form-control" />
        <span asp-validation-for="Hours_Needed" class="text-danger"></span><br /><br />

        <p>Assign to:</p>
        <select asp-for="Assigned_To">
            <option value="" disabled selected hidden>Select Employee</option>
            @foreach (var item in Model.Employee)
            {
                <option value="@item.Employee_Id">@item.FullName (@item.Hours hrs)</option>
            }
            <option value="null">Do not assign</option>
        </select><br /><br />
        <input type="submit" value="Apply" />
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 