@model ToDo

<h2>@Model.Task_Name</h2>
<br />
<h6>&nbsp &nbsp • @Model.Task_Description</h6>
<h6>&nbsp &nbsp • @Model.Hours_Needed hours needed</h6>
<br />
<div>
    <form asp-action="EditComplete" method="post">
        <p>Completed?</p>
        <select asp-for="Is_Completed">
            <option value="" disabled selected hidden>Select Status</option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>&nbsp &nbsp
        <input type="submit" value="Apply" />

        <input type="hidden" value="@Model.Todo_Id" asp-for="Todo_Id" />
        <input type="hidden" value="@Model.Task_Name" asp-for="Task_Name" />
        <input type="hidden" value="@Model.Task_Description" asp-for="Task_Description" />
        <input type="hidden" value="@Model.Hours_Needed" asp-for="Hours_Needed" />
        <input type="hidden" value="@Model.Assigned_To" asp-for="Assigned_To" />
    </form>
</div>